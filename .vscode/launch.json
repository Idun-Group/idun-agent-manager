{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "idun_agent_manager.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "purpose": ["debug-in-terminal"]
        },
        {
            "name": "Debug Streamlit UI",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "idun_agent_manager/ui/app.py"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "purpose": ["debug-in-terminal"]
        }
    ]
}